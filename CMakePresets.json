{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 13,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base-gnu",
            "generator": "Ninja",
            "hidden": true,
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "toolchainFile": "toolchains/gcc-armv7_m-unknown-none-eabi.toolchain",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/${presetName}"
            }
        },
        {
            "name": "base-armcc",
            "generator": "Ninja",
            "hidden": true,
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "toolchainFile": "toolchains/armcc-arm-unknown-none-eabi-host-win64.toolchain",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/${presetName}",
                "EXTRA_COMPILE_OPTIONS": "--cpu=CORTEX-M3",
                "EXTRA_C_FLAGS": " -W --apcs=interwork --library_type=microlib --split_sections",
                "EXTRA_ASM_FLAGS": "--predefine \"__MICROLIB SETA 1\""
            }
        },
        {
            "name": "stm32f215_cw-gnu-release",
            "inherits": "base-gnu",
            "displayName": "ARMv7-M Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "stm32f215_cw-gnu-minsizerel",
            "inherits": "base-gnu",
            "displayName": "ARMv7-M MinSizeRel",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "MinSizeRel"
            }
        },
        {
            "name": "stm32f215_cw-gnu-reldebinfo",
            "inherits": "base-gnu",
            "displayName": "ARMv7-M RelWithDebInfo",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "stm32f215_cw-armcc-minsizerel",
            "inherits": "base-armcc",
            "displayName": "ARMv7-M MinSizeRel",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "MinSizeRel"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "base",
            "hidden": true,
            "targets": [
                "all",
                "install"
            ]
        },
        {
            "name": "stm32f215_cw-gnu-release",
            "configurePreset": "stm32f215_cw-gnu-release",
            "inherits": "base"
        },
        {
            "name": "stm32f215_cw-gnu-minsizerel",
            "configurePreset": "stm32f215_cw-gnu-minsizerel",
            "inherits": "base"
        },
        {
            "name": "stm32f215_cw-gnu-reldebinfo",
            "configurePreset": "stm32f215_cw-gnu-reldebinfo",
            "inherits": "base"
        },
        {
            "name": "stm32f215_cw-armcc-minsizerel",
            "configurePreset": "stm32f215_cw-armcc-minsizerel",
            "inherits": "base"
        }
    ],
    "packagePresets": [
        {
            "name": "stm32f215_cw-gnu-release",
            "configurePreset": "stm32f215_cw-gnu-release",
            "packageDirectory": "${sourceDir}/out/package/${presetName}"
        },
        {
            "name": "stm32f215_cw-gnu-minsizerel",
            "configurePreset": "stm32f215_cw-gnu-minsizerel",
            "packageDirectory": "${sourceDir}/out/package/${presetName}"
        },
        {
            "name": "stm32f215_cw-gnu-reldebinfo",
            "configurePreset": "stm32f215_cw-gnu-reldebinfo",
            "packageDirectory": "${sourceDir}/out/package/${presetName}"
        },
        {
            "name": "stm32f215_cw-armcc-minsizerel",
            "configurePreset": "stm32f215_cw-armcc-minsizerel",
            "packageDirectory": "${sourceDir}/out/package/${presetName}"
        }
    ]
}